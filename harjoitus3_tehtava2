int lampomittari = A0;
const byte nappi1 = 2;
int adc = 0; 
int adcKeskiarvo = 0;
bool lukumaara = false; 
float lampotila;

void setup() { //määritetään sarjaportti, lämpömittari, nappi ja keskeytys
  Serial.begin(9600);
  pinMode(A0, INPUT);
  attachInterrupt(digitalPinToInterrupt(nappi1), lueLampotila, CHANGE); // kun nappia painetaan, vaihda funktioon lueLampotila
}

void loop() { 
  digitalWrite (A0, lampotila);
}

void lueLampotila() { // funktio, joka lukee lämpötilan 50 kertaa ja tulostaa arvon
  if (lukumaara == false) {
    for ( int x = 0; x < 50; x++ )
    {	
      lampotila = analogRead(lampomittari);
      Serial.println(lampotila);
    }
    lukumaara = true;
  }
  
}
